{
  "name": "socket.io-chat",
  "version": "0.0.0",
  "description": "A simple chat client using socket.io",
  "main": "index.js",
  "author": "Grant Timmerman",
  "private": true,
  "license": "BSD",
  "dependencies": {
    "express": "4.13.4",
    "socket.io": "^1.7.2"
  },
  "scripts": {
    "start": "node index.js",
    "start:docker": "docker-compose up",
    "start:docker:dev": "docker-compose up --build",
    "test": "npm run test:lint && npm run test:cover",
    "test:lint": "eslint public index.js chat.js",
    "test:spec": "mocha -R spec \"./test/spec/**/*spec.js\"",
    "test:cover": "istanbul cover node_modules/mocha/bin/_mocha -- \"./test/spec/**/*spec.js\"",
    "test:lint:docker": "docker exec -it tp2021_chat_1 npm test:lint",
    "test:docker": "docker exec -it tp2021_chat_1 npm test",
    "cover:publish": "cat ./coverage/lcov.info | ./node_modules/.bin/coveralls"
  },
  "devDependencies": {
    "@coorpacademy/eslint-plugin-coorpacademy": "^3.0.2",
    "coveralls": "^3.0.0",
    "eslint": "^3.13.1",
    "istanbul": "^0.4.5",
    "mocha": "^4.0.1"
  }
}
